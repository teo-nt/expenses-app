@page "/{id}/update"
@model ExpensesManagementApp.Pages.UpdateModel
@{
    ViewData["Title"] = "Update Expense";
}

<form method="post">
    <div class="row mb-3 align-items-center">
        <label for="id" class="col-md-1 form-label">ID</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="id" id="id" readonly
                    value="@Model.ExpenseUpdateDTO.Id" />
        </div>
    </div>

    <div class="row mb-3 align-items-center">
        <label for="name" class="col-md-1 form-label">Name</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="name" id="name" required
                   placeholder="Enter expense name" value="@Model.ExpenseUpdateDTO.Name" />
        </div>
    </div>

    <div class="row mb-3 align-items-center">
        <label for="amount" class="col-md-1 form-label">Amount</label>
        <div class="col-md-6">
            <input type="text" class="form-control" name="amount" id="amount" required
                   placeholder="Enter amount" value="@Model.ExpenseUpdateDTO.Amount"/>
        </div>
    </div>

    <div class="row mb-3 align-items-center">
        <label for="category" class="col-md-1 form-label">Category</label>
        <div class="col-md-6">
            <select class="form-select" id="category" name="category" aria-label="Select category">
                <option selected disabled>Select Category</option>
                <option value="Bills">Bills</option>
                <option value="Education">Education</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Fitness">Fitness</option>
                <option value="Food & Drinks">Food & Drinks</option>
                <option value="Investment">Investment</option>
                <option value="Shopping">Shopping</option>
            </select>
        </div>
    </div>

    <div class="row mb-3 align-items-center">
        <label for="date" class="col-md-1 form-label">Date</label>
        <div class="col-md-6">
            <input type="date" class="form-control" name="date" id="date"
                   placeholder="Enter date" / required value="@Model.ExpenseUpdateDTO.Date.ToString("yyyy-MM-dd")" />
        </div>
    </div>


    <div class="row mb-3">
        <div class="offset-md-1 col-md-3 d-grid">
            <button class="btn btn-primary" type="submit">Update</button>
        </div>
        <div class="col-md-3 d-grid">
            <a class="btn btn-outline-primary" href="/Index">Cancel</a>
        </div>
    </div>
</form>

<div>
    @if (Model.ErrorArray.Count != 0)
    {
        @foreach (var error in Model.ErrorArray)
        {
            <div>
                <p>@error.Message</p>
            </div>
        }
    }
</div>
